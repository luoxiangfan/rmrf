{
  "name": "node-rmrf",
  "version": "1.0.0",
  "license": "MIT",
  "description": "The rm -rf command implementation for node.",
  "type": "module",
  "bin": "./dist/bin.mjs",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "repository": {
    "type": "git",
    "url": "git+git@github.com:luoxiangfan/rmrf.git"
  },
  "keywords": [
    "rm",
    "rm -rf",
    "rm -fr",
    "remove",
    "directory",
    "cli",
    "rmdir",
    "recursive",
    "node",
    "nodejs"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint . --fix",
    "type-check": "tsc --strict --noEmit",
    "format": "prettier --write src/",
    "build": "unbuild",
    "release": "npm run format && unbuild && release-it"
  },
  "devDependencies": {
    "@types/node": "^22.7.8",
    "eslint": "^9.13.0",
    "prettier": "^3.3.3",
    "release-it": "^17.10.0",
    "typescript": "^5.6.3",
    "unbuild": "^2.0.0"
  }
}
